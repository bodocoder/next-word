<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>next word</title>
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="styles.css" />
</head>
<body>
  <div class="top container">
    <table>
      <tr>
        <td>
          <div class="form">
            <input id="nextPage" type="file" accept="image/jpeg, image/png" name="newPage" onchange="encodeImageFileAsURL(this)" required>
            <form action="/page" method="post">
              <input type="text" id="base64page" name="base64page" readonly>
              <input type="text" name="listName" placeholder="list name" value=<%= list.listName %> required>
              <button class="btn" type="submit"><span>scan</span></button>
            </form>
          </div>
        </td>
        <td>
          <div id="img-show">
            
          </div>
        </td>
      </tr>
    </table>
    
  </div>

  <div class="list container">
    <h1 class="heading">new words</h1>

    <% list.words.forEach(function(word) { %>
      <div class="item" id=<%= word %>>
        <h3><%= word %></h3>
        <a href="/add/<%= word %>">add</a>
        <a href="/remove/<%= word %>">remove</a>
      </div>
    <% }); %>
  </div>

  <script src="index.js"></script>
</body>
</html>













